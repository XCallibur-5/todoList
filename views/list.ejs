<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%= x %></h1>
    </div>

  <div class="box">
      <% for(var i=0; i<newItem.length; i++){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkBox" value="<%= newItem[i]._id %>" onChange="this.form.submit()">
            <p><%= newItem[i].todo %></p>
            <input type="hidden" name="e" value="<%= x %>"></input>
          </div>
        </form>
      <% } %>
      <form class="item" action="/" method="post">
        <input type="text" name="w" autocomplete="off" placeholder="New Item">
        <button type="submit" name="button" value="<%= x %>">+</button>

      </form>
  </div>
  </body>
</html>
